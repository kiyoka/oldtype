#!/bin/bash

. ${OT_HOME}/bin/lib.sh

export LANG=ja_JP.UTF-8
export LC_CTYPE=ja_JP.UTF-8

if [ "$OT_EDITHOME" = "" ] ; then
  echo "Please environment variables OT_EDITHOME"
  exit 1
fi

cd ${OT_EDITHOME}/edit
_svn t ls > /tmp/svn.ls
cat /tmp/svn.ls | sed 's/.ot$//' | awk '{ printf( "- [[%s]]\n", $0 ); }' > ${OT_EDITHOME}/edit/!AllPages.ot.tmp
/bin/mv -f ${OT_EDITHOME}/edit/!AllPages.ot.tmp ${OT_EDITHOME}/edit/!AllPages.ot
